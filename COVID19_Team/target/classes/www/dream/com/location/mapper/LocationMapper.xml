<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="www.dream.com.location.mapper.LocationMapper">
	<resultMap id="locationResultMap"
		type="www.dream.com.location.LocationVO">
		<result property="locationX" column="location_x" />
		<result property="locationY" column="location_y" />
		<result property="startDate" column="start_date" />
		<result property="thruDate" column="thru_date" />
	</resultMap>
	
	<!-- 모든 지정한 User 다 가져오기 -->
	<select id="selectAllLocation" resultMap="locationResultMap">
	<![CDATA[
		select *
		  from T_LOCATION
	]]>
	</select>
	
	
	
	<insert id="insertLocation" parameterType="Long">
		<![CDATA[
		insert into T_LOCATION(location_x, location_y)
		       values(#{locationX}, #{locationY})
		]]>
	</insert>
</mapper>